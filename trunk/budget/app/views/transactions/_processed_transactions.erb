<div class="span-24">
  <table border="0" cellspacing="0" cellpadding="0">
    <caption><em>Processed Transactions</em></caption>
    <thead>
      <tr>
        <th class="span-8">Transaction</th>
        <th class="span-6">Date</th>
        <th class="span-3 right">Amount</th>
        <th class="last"/>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td/>
        <td/>
        <td class="right">Total:
          <%= number_to_currency(period.processed_transactions_total) %>
        </td>
      </tr>
    </tfoot>
    <tbody>
      <% for t in period.processed_transactions -%>
        <tr id="<%= dom_id(t) %>">
          <td><%= t.description %></td>
          <td><%= t.date %></td>
          <td class="right"><%= number_to_currency(t.amount) %></td>
          <td>
            <% link_to [t], :confirm => 'Are you sure?',
              :method => :delete, :class => "button negative" do %>
              <img src="/stylesheets/blueprint/blueprint/plugins/buttons/icons/cross.png" alt=""/>Delete
            <% end %>
            <% link_to edit_transaction_path(t), :class => "button" do %>
              <img src="/stylesheets/blueprint/blueprint/plugins/buttons/icons/page_white_edit.png" alt=""/>Edit
            <% end %>
          </td>

        </tr>
      <% end -%>
    </tbody>
  </table>
</div>