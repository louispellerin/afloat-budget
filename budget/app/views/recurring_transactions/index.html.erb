<h1>Listing recurring_transactions</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Amount</th>
    <th>Base date</th>
    <th>Frequency</th>
  </tr>

<% for recurring_transaction in @recurring_transactions %>
  <tr>
    <td><%=h recurring_transaction.description %></td>
    <td><%=h recurring_transaction.amount %></td>
    <td><%=h recurring_transaction.base_date %></td>
    <td><%=h recurring_transaction.frequency %></td>
    <td><%= link_to 'Show', recurring_transaction %></td>
    <td><%= link_to 'Edit', edit_recurring_transaction_path(recurring_transaction) %></td>
    <td><%= link_to 'Destroy', recurring_transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New recurring_transaction', new_recurring_transaction_path %>
